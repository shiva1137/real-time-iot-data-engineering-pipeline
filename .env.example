# ============================================
# IoT Data Engineering Project - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/iot_data
MONGODB_DATABASE=iot_data
MONGODB_COLLECTION_RAW=raw_iot
MONGODB_COLLECTION_CLEANED=cleaned_iot

# PostgreSQL Configuration
POSTGRES_URI=postgresql://postgres:postgres@localhost:5432/iot_analytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=iot_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=raw_iot
KAFKA_TOPIC_CLEANED=cleaned_iot
KAFKA_TOPIC_AGGREGATED=aggregated_iot

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=IoT_Data_Pipeline

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
